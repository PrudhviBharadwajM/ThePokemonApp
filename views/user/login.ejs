<%- include('../partials/header.ejs') %>
    <br>
    <br>
      <div class="d-flex justify-content-center align-items-center vh-100">
        <form action="/users/login" method="POST" class="p-5 border rounded">
          <div class="text-center mb-4">
            <img class="img-brand" src="/images/pokemon_logo.png" alt="logo">
          </div>
          <h1 class="h3 mb-3 fw-normal">Log in</h1>
          <div class="form-floating mb-4">
            <p class="lead"><label class="form-label" for="email">Email address</label></p>
            <input type="email" required id="email" name="email" class="form-control form-control-lg" />
          </div>
          <div class="form-floating mb-4">
            <p class="lead"><label class="form-label" for="password">Password</label></p>
            <input type="password" required id="password" name="password" class="form-control form-control-lg" />
          </div>
          <button type="submit" class="btn btn-primary btn-lg btn-block mb-4">Sign in</button>
        </form>
      </div>
